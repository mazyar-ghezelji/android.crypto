<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="8dp"
    tools:context=".MainActivity">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        app:cardCornerRadius="3dp"
        android:elevation="5dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_margin="8dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="encryption is the process of encoding a message or information in such a way that only authorized parties can access it and those who are not authorized cannot."/>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                app:cardCornerRadius="3dp"
                android:elevation="5dp">
                <ImageView
                    android:layout_marginLeft="90dp"
                    android:layout_width="35dp"
                    android:layout_height="35dp"
                    android:layout_gravity="center_vertical"
                    android:src="@drawable/ic_lock_outline_black_24dp"/>
                <Button
                    android:textColor="#273c75"
                    android:id="@+id/encrypt_page_button"
                    android:background="#1234"
                    android:layout_width="match_parent"
                    android:layout_height="100dp"

                    android:text="encrypt"/>
            </android.support.v7.widget.CardView>
        </LinearLayout>

    </android.support.v7.widget.CardView>


<android.support.v7.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="3dp"
    android:elevation="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="Decryption is the process of transforming data that has been rendered unreadable through encryption back to its unencrypted form."/>
        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="3dp"
            android:elevation="5dp">
            <ImageView
                android:layout_marginLeft="90dp"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_lock_open_black_24dp"/>
            <Button
                android:textColor="#273c75"
                android:id="@+id/decrypt_page_button"
                android:background="#1234"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:text="decrypt"/>
        </android.support.v7.widget.CardView>

    </LinearLayout>
</android.support.v7.widget.CardView>



</LinearLayout>